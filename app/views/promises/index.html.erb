<div class='grid-container promise-col-label'>
  <p>Promise Maker:</p>
  <p>Promise:</p>
  <p>Status:</p>
  <p>Update:</p>
  <p>Delete:</p>
</div>

<% @promises.each do |promise| %>
  <div class='grid-container' id='promise-<%=promise.id%>'>
    <p><%= promise.maker_name %></p>
    <p><%= link_to promise.content, promise_path(promise) %></p>
    <p><%= promise.status %></p>
    <%= link_to "Update Promise", edit_promise_path(promise)%>
    <%= link_to "Delete Promise", promise_path(promise), method: :delete%>
  </div>
<% end %>

<div class='add-promise-link-container'>
  <%= link_to "Add Promise", new_promise_path %>
</div>
